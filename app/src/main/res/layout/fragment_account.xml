<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AccountFragment">
   <ScrollView
       android:layout_width="match_parent"
       android:layout_height="match_parent">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical"
       android:background="#FFFAF5"
       >
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="150dp"
          android:background="#EAAA75"
          android:orientation="vertical"
          android:padding="5dp">
         <ImageView
             android:layout_width="70dp"
             android:layout_height="70dp"
             android:src="@drawable/logo1"
             android:layout_gravity="center"
             android:layout_marginTop="20dp"

             />
        <TextView
            android:id="@+id/txt_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           android:layout_gravity="center"
           android:text="+92478238294"
            android:textSize="16dp"
            android:fontFamily="@font/montserrat_regular"
            />
         <TextView
             android:id="@+id/txt_confirm"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_gravity="center"
             android:text="Cập nhật thông tin"
             android:textSize="16dp"
             android:fontFamily="@font/montserrat_regular"
             />


      </LinearLayout>
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"

          >
         <ImageView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:src="@drawable/donmua"
             android:padding="5dp"/>
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
            android:text="Đơn mua"
             android:textSize="20dp"
             android:fontFamily="@font/montserrat_regular"
             android:textColor="@color/black"
             android:layout_gravity="center"
             android:layout_marginLeft="10dp"/>
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Xem lịch sử đơn hàng"
            android:layout_marginLeft="80dp"
             />
         <ImageView
             android:layout_width="10dp"
             android:layout_height="20dp"
            android:src="@drawable/vector"
            android:layout_gravity="center"
             android:layout_marginLeft="10dp"/>
      </LinearLayout>
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="90dp"
          android:orientation="horizontal">
         <LinearLayout
             android:layout_width="wrap_content"
             android:layout_height="match_parent"
             android:orientation="vertical"
             android:layout_marginLeft="15dp"
             >
            <ImageView
                android:layout_width="35dp"
                android:layout_height="50dp"
                android:src="@drawable/confirm"
                android:layout_gravity="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Xác nhận"
                android:fontFamily="@font/montserrat_regular"
                android:textSize="18dp"
                android:layout_gravity="center"/>
         </LinearLayout>
         <LinearLayout
             android:layout_width="wrap_content"
             android:layout_height="match_parent"
             android:orientation="vertical"
             android:layout_marginLeft="15dp"
             >
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/transport"
                android:layout_gravity="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đang giao"
                android:fontFamily="@font/montserrat_regular"
                android:textSize="18dp"
                android:layout_gravity="center"/>
         </LinearLayout>
         <LinearLayout
             android:layout_width="wrap_content"
             android:layout_height="match_parent"
             android:orientation="vertical"
             android:layout_marginLeft="15dp">
            <ImageView
                android:layout_width="35dp"
                android:layout_height="50dp"
                android:src="@drawable/cart"
                android:layout_gravity="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đã giao"
                android:fontFamily="@font/montserrat_regular"
                android:textSize="18dp"
                android:layout_gravity="center"/>
         </LinearLayout>
         <LinearLayout
             android:layout_width="wrap_content"
             android:layout_height="match_parent"
             android:orientation="vertical"
             android:layout_marginLeft="15dp">
            <ImageView
                android:layout_width="35dp"
                android:layout_height="50dp"
                android:src="@drawable/rate"
                android:layout_gravity="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đánh giá"
                android:fontFamily="@font/montserrat_regular"
                android:textSize="18dp"
                android:layout_gravity="center"

                />
         </LinearLayout>

      </LinearLayout>
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:background="#ffffff">
         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_gravity="center"
             android:padding="5dp"
            >
            <ImageView
                android:layout_width="18dp"
                android:layout_height="23dp"
               android:src="@drawable/person"/>
            <TextView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
               android:text="Thiết lập tài khoản"
               android:fontFamily="@font/montserrat_semibold"
               android:textSize="18dp"
                android:layout_marginLeft="10dp"/>
         </LinearLayout>
         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:padding="5dp"
             >

            <TextView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Hồ sơ của tôi"
                android:fontFamily="@font/montserrat_regular"
                android:textSize="16dp" />
            <ImageView
                android:layout_width="10dp"
                android:layout_height="20dp"
                android:src="@drawable/vector"
                android:layout_marginLeft="250dp"
                />
         </LinearLayout>
         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_gravity="center"
             android:padding="5dp">

            <TextView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tài khoản / Thẻ ngân hàng"
                android:fontFamily="@font/montserrat_regular"
                android:textSize="16dp"/>
            <ImageView
                android:layout_width="10dp"
                android:layout_height="20dp"
                android:src="@drawable/vector"
                android:layout_marginLeft="142dp"
                />
         </LinearLayout>
      </LinearLayout>
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:background="#ffffff"
          android:layout_marginTop="5dp">
         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_gravity="center"
             android:padding="5dp"
             >
            <ImageView
                android:layout_width="18dp"
                android:layout_height="23dp"
                android:src="@drawable/info"/>
            <TextView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thông tin chung"
                android:fontFamily="@font/montserrat_semibold"
                android:textSize="18dp"
                android:layout_marginLeft="10dp"/>
         </LinearLayout>
         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_gravity="center"
             android:padding="5dp">

            <TextView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Về MiuTea"
                android:fontFamily="@font/montserrat_regular"
                android:textSize="16dp"/>
            <ImageView
                android:layout_width="10dp"
                android:layout_height="20dp"
                android:src="@drawable/vector"
                android:layout_marginLeft="270dp"/>
         </LinearLayout>
         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_gravity="center"
             android:padding="5dp">

            <TextView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Danh sách các quán"
                android:fontFamily="@font/montserrat_regular"
                android:textSize="18dp"/>
            <ImageView
                android:layout_width="10dp"
                android:layout_height="20dp"
                android:src="@drawable/vector"
                android:layout_marginLeft="167dp"                />
         </LinearLayout>
      </LinearLayout>
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:background="#ffffff"
          android:layout_marginTop="5dp">
         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_gravity="center"
             android:padding="5dp">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/chat"/>
            <TextView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Trung tâm hỗ trợ"
                android:fontFamily="@font/montserrat_semibold"
                android:textSize="18dp"
                android:layout_marginLeft="10dp"/>
         </LinearLayout>
         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_gravity="center"
             android:padding="5dp">

            <TextView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Câu hỏi thường gặp"
                android:fontFamily="@font/montserrat_regular"
                android:textSize="16dp"/>
            <ImageView
                android:layout_width="10dp"
                android:layout_height="20dp"
                android:src="@drawable/vector"
                android:layout_marginLeft="190dp"/>
         </LinearLayout>
         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_gravity="center"
             android:padding="5dp">

            <TextView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phản hồi và hỗ trợ"
                android:fontFamily="@font/montserrat_regular"
                android:textSize="16dp"/>
            <ImageView
                android:layout_width="10dp"
                android:layout_height="20dp"
                android:src="@drawable/vector"
                android:layout_marginLeft="205dp"
                />
         </LinearLayout>
      </LinearLayout>
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:background="#ffffff"
          android:layout_marginTop="5dp">
         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_gravity="center"
             android:padding="5dp">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/setting"/>
            <TextView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cài đặt khác"
                android:fontFamily="@font/montserrat_semibold"
                android:textSize="18dp"
                android:layout_marginLeft="10dp"/>
         </LinearLayout>
         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_gravity="center"
             android:padding="5dp">

            <TextView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thông báo"
                android:fontFamily="@font/montserrat_regular"
                android:textSize="16dp"/>
            <ImageView
                android:layout_width="10dp"
                android:layout_height="20dp"
                android:src="@drawable/vector"

                android:layout_marginLeft="260dp"/>
         </LinearLayout>
         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_gravity="center"
             android:padding="5dp">

            <TextView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Điều khoản"
                android:fontFamily="@font/montserrat_regular"
                android:textSize="18dp"/>
            <ImageView
                android:layout_width="10dp"
                android:layout_height="20dp"
                android:src="@drawable/vector"
                android:layout_marginLeft="242dp"
                />
         </LinearLayout>
      </LinearLayout>
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="100dp"
          android:padding="10dp"
          android:background="#EAAA75">
         <ImageView
             android:layout_width="35dp"
             android:layout_height="35dp"
            android:src="@drawable/logout"/>
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
            android:text="Đăng xuất"

            android:textSize="20dp"
            android:fontFamily="@font/montserrat_semibold"
            android:layout_marginLeft="10dp" />
      </LinearLayout>






   </LinearLayout>



</ScrollView>


</FrameLayout>
