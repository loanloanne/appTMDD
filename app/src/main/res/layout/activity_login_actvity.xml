<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActvity"
    android:orientation="vertical"
    android:background="@drawable/background"
    android:padding="10dp">

    <ImageView
        android:id="@+id/btn_close"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/ic_baseline_close_24" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="50dp"
        android:padding="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chào Bạn!"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginTop="30dp"
            android:layout_gravity="center"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Đăng ký thành viên của MiuTea để nhận nhiều ưu đãi nhé."
            android:textColor="@color/text_color"
            android:textSize="15sp"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:paddingHorizontal="10dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="40dp"
            android:paddingHorizontal="10dp">
            <ImageView
                android:layout_width="45dp"
                android:layout_height="45dp" android:src="@drawable/ic_baseline_phone_android_24" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/_84"
                android:layout_gravity="center"
                android:textColor="@color/text_color"
                android:textSize="18sp"
                android:gravity="center"/>
            <EditText
                android:id="@+id/edt_inputphonemumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nhập Số Điện Thoại"
                android:layout_gravity="center"
                android:textColor="@color/text_color"
                android:background="@null"
                android:textSize="18sp"
                android:layout_marginStart="10dp"
                android:imeOptions="actionDone"
                android:importantForAutofill="no"
                android:inputType="number"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="8dp"
            android:backgroundTint="@color/text_color"
            android:background="#000000"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="40dp">
            <ImageView
                android:id="@+id/img_agree"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/oval"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:text="Đồng ý với "
                android:textStyle="bold"
                android:textColor="#000000"
                android:textSize="15sp"
                android:gravity="center"
                android:paddingLeft="5dp"/>

            <TextView
                android:id="@+id/txt_Condition"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:gravity="center"
                android:text="Điều Khoản và Điều Kiện"
                android:textColor="@color/button_color"
                android:textSize="15sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btn_continuelogin"
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        app:cornerRadius = "50dp"
        android:backgroundTint="@color/button_color"
        android:text="Tiếp tục"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        />
</RelativeLayout>